{
  "editor.formatOnSave": true,
  // Fonts and Themes
  "editor.fontSize": 14,
  "editor.fontFamily": "'GeistMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "'GeistMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  // Color Theme
  "workbench.colorTheme": "GitHub Dark Default",
  // Icons
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.productIconTheme": "icons-carbon",
  // Sidebar and Activity Bar Location
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  // Hide useless UI elements
  "editor.minimap.enabled": false,
  "workbench.externalBrowser": "google-chrome",
  "workbench.editor.showTabs": "single",
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  // Copilot
  "github.copilot.advanced": {
    "experimentalFeatures": {
      "enableExperimentalFeatures": true,
      "enableExperimentalFeaturesForAllUsers": true
    }
  },
  // Enable copilot for these filetypes
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "go": true
  },
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",

  // Update the imports when files are moved
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "explorer.confirmDragAndDrop": false,
}
